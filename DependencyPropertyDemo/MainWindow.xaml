<Window x:Class="DependencyPropertyDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DependencyPropertyDemo"
        xmlns:uc="clr-namespace:DependencyPropertyDemo.UserControls"
        mc:Ignorable="d"
        Title="DependencyPropertiesDemo" Height="400" Width="600" >
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <uc:HorizontalTileUC Grid.Row="0" Grid.Column="0" PrimaryColor="#BC8055" SecondaryColor="#FFDCC2" TertiaryColor="#6F3810" Margin="5" />
        <uc:HorizontalTileUC Grid.Row="1" Grid.Column="0" PrimaryColor="#4D4482" SecondaryColor="#9C96BE" TertiaryColor="#1C134D" Margin="5" />
        <uc:HorizontalTileUC Grid.Row="2" Grid.Column="0" PrimaryColor="#8FAF4F" SecondaryColor="#DEF1B7" TertiaryColor="#4A680F" Margin="5" />
    </Grid>
</Window>
